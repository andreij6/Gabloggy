<!DOCTYPE html>
<html>
<head>
  <title>Corner Label</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link href='http://fonts.googleapis.com/css?family=PT+Sans|Montserrat+Alternates|Montserrat+Subrayada' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<section class="col-md-2">
	
		<ul class="nav nav-pills nav-stacked">
		  <li class="active"><%= link_to 'Home', root_path%></li>
		  <li><%= link_to 'Fitness', fitnesses_path%></li>
		  <li><%= link_to 'Recipes', recipes_path%></li>
		  <li><%= link_to 'Current Events', current_events_path%></li>
		  <li><%= link_to 'Shopping', deals_path%></li>
		</ul>
		<img data-src="holder.js/100%x180" alt="..."><br />
	</section>
	<section class="col-md-9">

		<nav class="navbar" role="navigation">
			  <!-- Brand and toggle get grouped for better mobile display -->
			  <div class="navbar-header">
			    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
			      <span class="sr-only">Toggle navigation</span>
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>
			    </button>
			    <%= link_to 'Corner Label',root_path,  :class=> "navbar-brand"%>
			    <%= form_tag recipes_path, :class=>"navbar-form navbar-left", :method => 'get' do%>
				  <div class="form-group">
				    <%= text_field_tag :search, params[:search], :class=>"form-control", :placeholder=>"Search" %>
				  </div>
				  <%= submit_tag "Search", :class=>"btn btn-default", :name => nil%>
				<% end %>
			  </div>
				
			  <!-- Collect the nav links, forms, and other content for toggling -->
			  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			    <ul class="nav navbar-nav navbar-right">
			    	<% if user_signed_in? %>
			    		<li>Logged in as: <%= current_user.email %></li>
			    		<li><%= link_to 'Edit profile', edit_user_registration_path %></li>
			    		<li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
			    	<% else %>
			    		<li><%= link_to "Sign up", new_user_registration_path %></li>
			    		<li><%= link_to "Login", new_user_session_path %></li> 
			    	<% end %>
			      <li><%= link_to 'Top Recipes', recipes_path%></li>
			      <li><%= link_to 'Latest', recipes_latest_path%></li>	  
			    </ul>
			  </div><!-- /.navbar-collapse -->
			</nav>
	</section>
		<p class="notice"><%= notice%></p>
		<p class="alert"><%= alert%></p>
		<%= yield %>
	<aside class="col-md-2">
		<h1>Advertisements</h1>
		 <img data-src="holder.js/100%x180" alt="..."><br />
		 <img data-src="holder.js/100%x180" alt="..."><br />
		 <img data-src="holder.js/100%x180" alt="..."><br />
		 <img data-src="holder.js/100%x180" alt="..."><br />
	</aside>
	
	<footer>
			<div class="col-xs-8 foot8">
			<ul class="nav nav-tabs nav-justified">
				<li><%= link_to "Recipes", recipes_path %></li>
				<li><%= link_to "Fitness", fitnesses_path %></li>
				<li><%= link_to "Tech", teches_path %></li>
				<li><%= link_to "Events", current_events_path %></li>
			</ul>
			</div>
			<div class="col-xs-4 foot4">
				<h4>Site Name &copy; <%= Time.now.year %></h4>
			</div>
		</footer>

</body>

</html>
