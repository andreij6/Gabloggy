
</header>
	<div class="showgradient">
	<section class="container">
		<div class="video col-md-9">
			<% if @recipe.video.empty?%>
				<%= image_tag @recipe.image_url(:thumb).to_s, :class => "video_replace"%>
			<% else%>
				
				<%= videoConversion(@recipe.video).html_safe %>
				
			<% end %>
		</div>
	<h1><%= @recipe.title%></h1>
	<h2>Description</h2>
	<p><%= markdown(@recipe.description) %></p>
			
		</section>
	</div>
		<div class="container">		
			<ul>
				<li>Prep Time: <%= @recipe.prep_time %></li>
				<li>Missed Time: <%= @recipe.missed_time %></li>
				<li>Total:<%= @recipe.total_time %></li>
			</ul>
			<h2>List of Ingredients </h2>
			<ul>
				<% @recipe.ingredients.each do |ingredient| %>
				<li><%= ingredient.name %> </li>
				<% end%>
			</ul>
		</div>
	<div class="container">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Ingredients</th>
				<th>Tools</th>
				<th>Instructions</th>
			</tr>
		</thead>
		<tbody>
		</tbody>
		<% @recipe.steps.each do |step|%>
  		<tr>
  			<td><%= step.step_no%></td>
  			<td>
  				<ul>
  				<% step.ingredients.each do |ingre| %>
  					<li><%= ingre.name %></li>
  				<% end %>
  				</ul>
  			</td>
  			<td>
  				<ul>
	  				<li>tools </li>
	  				<li>tools </li>
	  			</ul>
	  		</td>
	  		<td>
	  			<%= step.description%>
	  		</td>
  		</tr>
  		<% end %>
	</table>
	
	<% @recipe.steps.each do |step|%>
		   <% if step.image_url(:thumb) %>
		<div class="container">
		  <div class="col-sm-6 col-md-4">
		  	
		    <div class="thumbnail">
		    	<div class="caption">
		        <h3>Step <%= step.step_no%></h3>
		      </div>
		      <%= image_tag step.image_url(:thumb).to_s, :class=> "img-thumbnail", :size => "240x240"%>
		      
		    </div>
		  </div>
		</div>
		<% end %>
		<% end %>
		
	</div>
		<%= link_to 'New Step', new_recipe_step_path(@recipe)%><br />
		<%= link_to 'Edit', edit_recipe_path(@recipe) %>	|
	    <%= link_to "destroy", @recipe, :method => :delete %>  |
		<%= link_to 'Back', recipes_path %>
