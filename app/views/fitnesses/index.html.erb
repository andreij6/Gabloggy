<h1>Listing fitnesses</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fitnesses.each do |fitness| %>
  <tr>
    <td><%= fitness.title %></td>
    <td><%= fitness.body %></td>
    <td><%= link_to 'Show', fitness %></td>
    <td><%= link_to 'Edit', edit_fitness_path(fitness) %></td>
    <td><%= link_to 'Destroy', fitness, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

